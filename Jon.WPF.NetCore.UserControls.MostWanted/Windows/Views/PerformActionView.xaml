<local:StepBase
    x:Class="Jon.WPF.NetCore.UserControls.MostWanted.Windows.Views.PerformActionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jon.WPF.NetCore.UserControls.MostWanted.Windows.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <TextBlock
            Margin="10"
            FontWeight="Bold"
            Text="Executing action..."
            TextAlignment="Center" />
        <ProgressBar
            x:Name="ActionProgressBar"
            Height="20"
            Margin="10" />
        <TextBlock x:Name="ActionStatusTextBlock" TextWrapping="Wrap" />
    </StackPanel>
</local:StepBase>