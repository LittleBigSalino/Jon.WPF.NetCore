<local:StepBase
    x:Class="Jon.WPF.NetCore.UserControls.MostWanted.Windows.Views.WizardWindowWelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jon.WPF.NetCore.UserControls.MostWanted.Windows.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel VerticalAlignment="Center">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock
                    x:Name="WelcomeTextBlockTitle"
                    Grid.Row="1"
                    Grid.Column="1"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Welcome to the wizard!"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
                <TextBlock
                    x:Name="TextBlockWelcomeMessage"
                    Text="these steps blah blah"
                    TextWrapping="WrapWithOverflow" />
            </StackPanel>
        </DockPanel>
    </Grid>
</local:StepBase>