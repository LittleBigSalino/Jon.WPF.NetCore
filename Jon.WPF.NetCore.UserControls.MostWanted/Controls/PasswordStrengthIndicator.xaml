<UserControl
    x:Class="Jon.WPF.NetCore.UserControls.MostWanted.Controls.PasswordStrengthIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jon.WPF.NetCore.UserControls.MostWanted.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="200"
    MinHeight="30"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            x:Name="strengthTextBlock"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="{Binding ElementName=passwordStrengthIndicatorControl, Path=FontSize}"
            FontWeight="Bold"
            Foreground="{Binding ElementName=passwordStrengthIndicatorControl, Path=PasswordStrengthColor}"
            Text="{Binding ElementName=passwordStrengthIndicatorControl, Path=PasswordStrengthText}" />
    </Grid>
    <UserControl.ToolTip>
        <ToolTip x:Name="strengthToolTip" Content="{Binding ElementName=passwordStrengthIndicatorControl, Path=StrengthExplanation}" />
    </UserControl.ToolTip>
</UserControl>